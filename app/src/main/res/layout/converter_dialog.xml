<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/firstCurrencySelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_background"
        android:popupBackground="@drawable/transparent_background"
        android:spinnerMode="dropdown"
        tools:listitem="@layout/spinner_folded_item" />

    <EditText
        android:id="@+id/firstCurrencyAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="сумма первой валюты"
        android:inputType="number"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_exchange" />

    <EditText
        android:id="@+id/secondCurrencyAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="сумма второй валюты"
        android:inputType="number"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/secondCurrencySelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_background"
        android:popupBackground="@drawable/transparent_background"
        android:spinnerMode="dropdown"
        tools:listitem="@layout/spinner_folded_item" />

</LinearLayout>